{% extends "admin/base.html.twig" %}

{% block body %}
    <div class="container grid px-6 mx-auto">
        {{ include('admin/common/return_button.html.twig', {
            link: path('admin_community_edit', {id: community.id}),
            label: 'admin.actions.back_to_community'|trans
        }) }}

        <h1 class="title">{{'admin.community.main-goals'|trans }}</h1>
        <div class="rounded-block ">
            {{ form(form) }}
            </div>
            {% if refineGoalForm is not null %}
                <h3 class="form-title">{{ 'admin.community.refine'|trans }}</h3>
                <div class="rounded-block ">
                    {{ form(refineGoalForm) }}
                    </div>
                {% endif %}
                {% if matchingForm is not null %}
                    <h3 class="form-title">{{ 'admin.community.matching'|trans }}</h3>
                    <div class="rounded-block ">
                        {{ form(matchingForm) }}
                        </div>
                    {% endif %}
                </div>
            {% endblock %}
