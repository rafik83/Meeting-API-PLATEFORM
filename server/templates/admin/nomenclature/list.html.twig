{% extends "admin/base.html.twig" %}

{% import "admin/common/macros.html.twig" as macros %}

{% block body %}
    <div class="data-table">
        <div class="collapse">
            <div class="data-table__header">
                <div class="title">
                    <h1>Nomenclature</h1>
                </div>
                <div class="actions">
                    <button class="button button--neutral collapse__trigger animated-button animated-button--equalizer">
                        <div class="icon icon--animated icon--equalizer">
                            <div class="icon--equalizer__bar"></div>
                            <div class="icon--equalizer__bar"></div>
                            <div class="icon--equalizer__bar"></div>
                        </div>
                        Filtrer
                    </button>
                    <a href="{{ path('admin_nomenclature_create') }}" class="button button--primary">{{ 'admin.nomenclature.list.actions.create'|trans }}</a>
                </div>
            </div>
            <div class="data-table__filters collapse__menu">
                <div class="filters">
                    {{ form_start(filtersForm) }}
                        {{ form_row(filtersForm.community) }}
                        {{ form_row(filtersForm.reference) }}
                        <button class="button button--primary">{{ 'admin.nomenclature.list.actions.filter'|trans }}</button>
                    {{ form_end(filtersForm) }}
                </div>
            </div>
        </div>
        <div class="data-table__content">
            {% if pagination|length %}
                <table>
                    <thead>
                        <tr>
                            <th>{{ macros.sortLink('admin.nomenclature.list.table.community'|trans, 'community.name') }}</th>
                            <th>{{ macros.sortLink('admin.nomenclature.list.table.reference'|trans, 'nomenclature.reference') }}</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for nomenclature in pagination %}
                            <tr>
                                <td>{{ nomenclature.community.name|default('') }}</td>
                                <td>{{ nomenclature.reference }}</td>
                                <td class="action">
                                    <a href="{{ path('admin_nomenclature_edit', {id: nomenclature.id}) }}">{{ 'admin.nomenclature.list.actions.edit'|trans }}</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
    {{ include('admin/common/pagination.html.twig', {pagination: pagination}) }}
{% endblock %}
