# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{php,html,twig}]
indent_size = 4

[*.{php,html,twig,md}]
max_line_length = 120

[COMMIT_EDITMSG]
max_line_length = 0
